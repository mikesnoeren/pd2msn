<!DOCTYPE html>
<html lang="{{ craft.app.language|slice(0, 2) }}">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1"/>
        <link href="/dist/style.css" rel="stylesheet"/>

        {% hook "seo" %}
        {{ head() }}

        <style>
            [x-cloak] {
                display: none !important;
            }
        </style>
    </head>

    {% apply spaceless %}
        {% set buttonPrimary = 'inline-block px-4 py-2 text-base font-medium rounded-md border border-transparent bg-slate-500 text-slate-200 hover:bg-opacity-75' %}
        {% set buttonPrimaryInverted = 'inline-block px-4 py-2 text-base font-medium bg-white rounded-md border border-transparent text-slate-600 hover:bg-slate-200' %}
    {% endapply %}

    <body class="bg-slate-800">
        <div class="max-w-[1920px] mx-auto bg-slate-900">
            {% block header %}
                {% include '_inc/components/header.twig' %}
            {% endblock %}

            <main class="p-4 mx-auto max-w-7xl sm:p-6 lg:p-8">
                {% block main %}
                {% endblock %}
            </main>

            {% block footer %}
                {% include '_inc/components/footer.twig' %}
            {% endblock %}
        </div>

        <script src="/dist/app.js"></script>
    </body>
</html>
